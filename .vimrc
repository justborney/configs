set ts=4
set sw=4
set number
syntax on

set statusline=%F%m%r%h%w\ Line:\ %l/%L[%p%%]\ Col:\ %c\ Buf:\ #%n\ [%b][0x%B]

filetype plugin on

set backspace=indent,eol,start

set nocompatible

set history=500
set laststatus=2
set ruler
set showcmd
set incsearch
set smartindent
set autoindent
set expandtab

color xoria256
